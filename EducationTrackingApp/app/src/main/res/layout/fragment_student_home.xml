<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="24dp"
    android:paddingBottom="24dp"
    tools:context=".view.StudentHomeFragment">

    <!-- Welcome Message -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hello, have a great learning day!"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center"
        android:shadowColor="#6A1B9A"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4"
        android:lineSpacingExtra="6dp"
        android:paddingVertical="12dp"
        android:contentDescription="Personalized welcome message for student"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Card: Enrolled Classes -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEnrolledClasses"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/welcomeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_gradient"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/enrolledClassIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_class_new"
                android:contentDescription="Enrolled classes icon"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/enrolledClassCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Enrolled Classes: ..."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:contentDescription="Number of enrolled classes" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card: Assignments -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardAssignments"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/cardEnrolledClasses"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_gradient"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/assignmentIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_progress_new"
                android:contentDescription="Assignments icon"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/assignmentCountText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Answered Tasks: ..."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:contentDescription="Number of pending assignments" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card: Progress -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardProgress"
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintTop_toBottomOf="@id/cardAssignments"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/card_gradient"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/progressIcon"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_assignment_new"
                android:contentDescription="Progress icon"
                app:tint="@color/white" />

            <TextView
                android:id="@+id/progressText"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="12dp"
                android:text="Unanswered Tasks: ..."
                android:textSize="18sp"
                android:textColor="@color/white"
                android:contentDescription="Number of unanswered tasks" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Progress Bar -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>