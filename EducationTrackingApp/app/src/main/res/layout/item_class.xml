<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_card"
    android:padding="16dp"
    android:layout_margin="8dp"
    android:elevation="2dp">

    <!-- Stage + Menu -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/classStageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage: High"
            android:textStyle="bold"
            android:textSize="17sp"
            android:textColor="#222222"
            android:layout_alignParentStart="true" />

        <ImageView
            android:id="@+id/optionsMenuIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:contentDescription="Options Menu"
            android:focusable="true"
            android:padding="4dp"
            android:src="@drawable/ic_more_vert"
            tools:ignore="TouchTargetSizeCheck" />
    </RelativeLayout>

    <!-- Grade -->
    <TextView
        android:id="@+id/classGradeLevelText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Grade: 6"
        android:textSize="15sp"
        android:textColor="#444444" />

    <!-- Created Date -->
    <TextView
        android:id="@+id/classCreatedAtText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:text="Created: 10/05/2025"
        android:textSize="14sp"
        android:textColor="#888888" />

    <!-- Buttons (Upload Task and Finished Tasks) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <Button
            android:id="@+id/uploadTaskButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ðŸ“¤ Upload Task"
            android:textSize="14sp"
            android:backgroundTint="#42A5F5"
            android:textColor="@android:color/white"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/showFinishedTasksButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="ðŸ“„ Finished Tasks"
            android:textSize="14sp"
            android:backgroundTint="#7E57C2"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <!-- New Button (View Tasks) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="12dp"
        android:gravity="center">

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <Button
            android:id="@+id/viewTasksButton"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="View Tasks"
            android:textSize="14sp"
            android:backgroundTint="#26A69A"
            android:textColor="@android:color/white"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>