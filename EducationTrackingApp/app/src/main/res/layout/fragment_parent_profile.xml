<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_premium"
    android:padding="16dp"
    tools:context=".view.ParentProfileFragment">

    <!-- Profile Image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/profileImageCard"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="32dp"
        app:cardCornerRadius="60dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/profilePhotoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_default_profile"
            android:contentDescription="Parent profile photo" />
    </androidx.cardview.widget.CardView>

    <!-- Full Name (Name + Surname) -->
    <TextView
        android:id="@+id/userNameText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Parent Name Surname"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:shadowColor="#000000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="2"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:contentDescription="Parent's full name"
        app:layout_constraintTop_toBottomOf="@id/profileImageCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Email -->
    <TextView
        android:id="@+id/userEmailText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="parent@example.com"
        android:textSize="16sp"
        android:textColor="#E0E0E0"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:contentDescription="Parent's email address"
        app:layout_constraintTop_toBottomOf="@id/userNameText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Age -->
    <TextView
        android:id="@+id/userAgeText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Age"
        android:textSize="14sp"
        android:textColor="#E0E0E0"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:contentDescription="Parent's age"
        app:layout_constraintTop_toBottomOf="@id/userEmailText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Gender -->
    <TextView
        android:id="@+id/userGenderText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:text="Gender"
        android:textSize="14sp"
        android:textColor="#E0E0E0"
        android:lineSpacingExtra="4dp"
        android:gravity="center"
        android:contentDescription="Parent's gender"
        app:layout_constraintTop_toBottomOf="@id/userAgeText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Edit Profile Button -->
    <Button
        android:id="@+id/editProfileButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Edit Profile"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#4A00E0"
        app:cornerRadius="12dp"
        android:paddingVertical="12dp"
        android:contentDescription="Button to edit parent profile"
        app:layout_constraintTop_toBottomOf="@id/userGenderText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Log Out Button -->
    <Button
        android:id="@+id/logOutButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="Log Out"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#FF0000"
        app:cornerRadius="12dp"
        android:paddingVertical="12dp"
        android:contentDescription="Button to log out of the app"
        app:layout_constraintTop_toBottomOf="@id/editProfileButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
