<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="?attr/colorSurface"
    app:strokeColor="?attr/colorOutline"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Answer Info Section Title -->
        <TextView
            android:id="@+id/answerInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/answer_info_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/colorSurfaceContainerLow"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/answer_info_title_description"
            tools:text="Answer Info" />

        <!-- Answer Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?attr/colorSurfaceContainer"
            android:layout_marginBottom="12dp">

            <!-- Email and Options Menu -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="4dp">

                <TextView
                    android:id="@+id/emailText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/student_email_label"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="?attr/colorOnSurface"
                    android:layout_gravity="center_vertical"
                    android:contentDescription="@string/student_email_description"
                    tools:text="Student Email: student@example.com" />

                <ImageView
                    android:id="@+id/optionsMenuIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center_vertical"
                    android:clickable="true"
                    android:contentDescription="@string/options_menu_description"
                    android:focusable="true"
                    android:padding="4dp"
                    android:src="@drawable/ic_more_vert"
                    app:tint="?attr/colorOnSurfaceVariant"
                    tools:ignore="TouchTargetSizeCheck" />
            </LinearLayout>

            <!-- Answer Text -->
            <TextView
                android:id="@+id/answerText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/answer_text_label"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/answer_text_description"
                tools:text="Answer: This is the student's submitted answer." />

            <!-- Answer Image -->
            <ImageView
                android:id="@+id/answerImageView"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:visibility="gone"
                android:scaleType="centerCrop"
                android:background="?attr/colorSurfaceContainer"
                android:clipToOutline="true"
                app:cardCornerRadius="12dp"
                android:contentDescription="@string/answer_image_description"
                android:layout_marginTop="8dp"
                tools:src="@tools:sample/backgrounds/scenic" />

            <!-- Attached File -->
            <TextView
                android:id="@+id/attachedFileName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:textColor="?attr/colorPrimary"
                android:textSize="14sp"
                android:text="@string/attached_file_label"
                android:drawableStart="@drawable/ic_file"
                android:drawableTint="?attr/colorPrimary"
                android:drawablePadding="8dp"
                android:padding="8dp"
                android:background="?attr/selectableItemBackground"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/attached_file_description"
                tools:text="Attached File: document.pdf" />

            <!-- Submission Date -->
            <TextView
                android:id="@+id/dateText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/submission_date_label"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginTop="8dp"
                android:contentDescription="@string/submission_date_description"
                tools:text="Date: 01/01/2024" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutline"
            android:layout_marginVertical="8dp" />

        <!-- Task Info Section Title -->
        <TextView
            android:id="@+id/taskInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/task_info_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/colorSurfaceContainerLow"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/task_info_title_description"
            tools:text="Task Info" />

        <!-- Task Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?attr/colorSurfaceContainer"
            android:layout_marginBottom="12dp">

            <TextView
                android:id="@+id/taskDescriptionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/task_description_label"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="?attr/colorOnSurface"
                android:contentDescription="@string/task_description_title_description"
                tools:text="Task Description:" />

            <TextView
                android:id="@+id/taskDescriptionText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/task_description_text"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:layout_marginTop="4dp"
                android:contentDescription="@string/task_description_text_description"
                tools:text="Complete the math assignment on fractions." />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?attr/colorOutline"
            android:layout_marginVertical="8dp" />

        <!-- Grade Info Section Title -->
        <TextView
            android:id="@+id/gradeInfoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/grade_info_title"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="?attr/colorOnSurface"
            android:gravity="center"
            android:padding="8dp"
            android:background="?attr/colorSurfaceContainerLow"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/grade_info_title_description"
            tools:text="Grade Info" />

        <!-- Grade Info Section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp"
            android:background="?attr/colorSurfaceContainer">

            <TextView
                android:id="@+id/gradeValueText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/grade_value_label"
                android:textSize="14sp"
                android:textColor="?attr/colorOnSurface"
                android:contentDescription="@string/grade_value_description"
                tools:text="Grade: Not graded" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="8dp">

                <ProgressBar
                    android:id="@+id/gradeProgressBar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:progress="0"
                    android:max="100"
                    android:progressTint="@color/purple_500"
                    android:backgroundTint="#D3D3D3"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="@string/grade_progress_description" />

                <TextView
                    android:id="@+id/gradeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/grade_progress_label"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:contentDescription="@string/grade_progress_description"
                    tools:text="0/100" />
            </LinearLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/gradeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="12dp"
                android:text="@string/evaluate_answer_label"
                android:textColor="?attr/colorOnPrimary"
                app:backgroundTint="?attr/colorPrimary"
                app:cornerRadius="8dp"
                style="@style/Widget.Material3.Button.ElevatedButton"
                android:contentDescription="@string/evaluate_answer_description"
                tools:text="Evaluate Answer" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
