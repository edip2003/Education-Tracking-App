<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/card_gradient_premium"
        android:orientation="vertical"
        android:padding="20dp">

        <TextView
            android:id="@+id/studentNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Student Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:shadowColor="#000000"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="2"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Student's full name" />

        <TextView
            android:id="@+id/studentEmailText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="student@example.com"
            android:textSize="16sp"
            android:textColor="#E0E0E0"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Student's email address" />

        <TextView
            android:id="@+id/academicStageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Stage: High"
            android:textSize="16sp"
            android:textColor="#E0E0E0"
            android:lineSpacingExtra="4dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="Student's academic stage" />

        <TextView
            android:id="@+id/gradeLevelText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Grade: 12"
            android:textSize="16sp"
            android:textColor="#E0E0E0"
            android:lineSpacingExtra="4dp"
            android:contentDescription="Student's grade level" />

    </LinearLayout>
</androidx.cardview.widget.CardView>