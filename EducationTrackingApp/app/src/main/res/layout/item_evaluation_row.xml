<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="4dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="12dp">

            <!-- Teacher Info Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Teacher Info"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:background="#E8ECEF"
                android:layout_marginBottom="6dp" />

            <!-- Teacher Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/teacherEmailText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Teacher Email: teacher@example.com"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textColor="#222222"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:id="@+id/optionsMenuIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:padding="8dp"
                    android:visibility="invisible"
                    android:src="@drawable/ic_more_vert"
                    android:contentDescription="Options"
                    android:clickable="true"
                    android:focusable="true" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="6dp" />

            <!-- Task Info Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Task Info"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:background="#E8ECEF"
                android:layout_marginBottom="6dp" />

            <!-- Task Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/recyclerCommentText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Task Description"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="#000000"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:id="@+id/recyclerImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/recyclerDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/upload_date"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/taskFinishDateText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/finish_date"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="6dp" />

            <!-- Answer Info Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Answer Info"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:background="#E8ECEF"
                android:layout_marginBottom="6dp" />

            <!-- Answer Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#F5F5F5"
                android:layout_marginBottom="6dp">

                <TextView
                    android:id="@+id/answerUploadDateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Upload Date:"
                    android:textColor="#888888"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/studentAnswerText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Student Answer: ..."
                    android:textColor="#444444"
                    android:textSize="14sp"
                    android:layout_marginBottom="4dp" />

                <ImageView
                    android:id="@+id/answerImageView"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:adjustViewBounds="true"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/attachedFileName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Attached File: file.pdf"
                    android:textColor="@color/purple_700"
                    android:textStyle="bold"
                    android:padding="8dp"
                    android:background="@drawable/bg_rounded_gray"
                    android:visibility="gone"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="6dp" />

            <!-- Grade Info Section Title -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Grade Info"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:gravity="start"
                android:padding="8dp"
                android:background="#E8ECEF"
                android:layout_marginBottom="6dp" />

            <!-- Grade Info Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#F5F5F5">

                <TextView
                    android:id="@+id/evaluationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Grade: 90 / 100"
                    android:textSize="14sp"
                    android:textColor="#4CAF50"
                    android:textStyle="bold"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="4dp" />
            </LinearLayout>

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#E0E0E0"
                android:layout_marginBottom="6dp" />

            <!-- Dialog Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:padding="8dp"
                android:layout_marginBottom="8dp">

                <Button
                    android:id="@+id/sendReportButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Send as Report PDF"
                    android:textSize="14sp"
                    android:layout_marginEnd="8dp"
                    android:backgroundTint="@color/purple_500"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="16dp" />

                <Button
                    android:id="@+id/cancelButton"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Cancel"
                    android:textSize="14sp"
                    android:backgroundTint="#888888"
                    android:textColor="@android:color/white"
                    android:paddingHorizontal="16dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.cardview.widget.CardView>
